<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1 class="text-center index-title">All Cocktails</h1>
      <ul class="list-group">
        <% @cocktails.each do |cocktail| %>
        <div class="col-xs-4 cocktail-list">
          <li class="list-group-item">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </li>
        </div>
        <% end %>
      </ul>

    </div>
    &nbsp;
    <p class="text-center"><%= link_to "Add a new Cocktail", new_cocktail_path, class: 'btn btn-primary all-button' %></p>
  </div>
</div>

